<div class = "basic-container cf">

    <div class="profile-top cf">
        <div id="profile-photo">
        	<% if @user.avatar_file_name %>
        		<%= image_tag @user.avatar_url(:medium) %><br /><br />
        	<% end %>
        </div>

    	<div id="profile-info">
            <p><span class="title">First Name: </span><%= @user.first_name %></p>

            <p><span class="title">Last Name: </span><%= @user.last_name %></p>

            <p><span class="title">Email: </span><%= @user.email %></p>

            <p><span class="title">Phone Number: </span><%= @user.phone_number %></p><br />
            
          <% if current_user %>
          <%=link_to "Edit Profile", edit_user_path(current_user), class: "small button" %>
            <%=link_to "Add Open House", new_location_path(current_user), class: "small button" %>
          <% end %>
        </div>
    </div>
</div>