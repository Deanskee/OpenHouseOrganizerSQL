
<%= form_for @location do |f| %>
        
<body>

    <div class="row">
        <div class="small-6  small-offset-3 columns">
            <h1><strong>Let's get started</strong></h1>

            <form role="form">
                <div class="form-group">
                <%= f.text_field :owner, :placeholder => "Owner"  %>
                </div>
                <div class="form-group">
                <%= f.text_field :address, :placeholder => "Address"  %>
                </div>
                <div class="form-group">
                <%= f.text_field :city, :placeholder => "City"  %>
                </div>
                <div class="form-group">
                <%= f.text_field :state, :placeholder => "State"  %>
                </div>
                <div class="form-group">
                  <%= f.text_field :zip_code, :placeholder => "Zip-Code" %>
                </div>
                 <div class="form-group">
                <%= f.file_field :picture %>
                </div>

                  <div class="form-group">
                    <%= f.submit "Add Location to profile", class: 'button success' %>
                </div>
            </form>
        </div>
       
</body>
                
<% end %>