<%= form_for [@location, @visit] do |f| %>
    <body>
        <div class="row">
            <div class="columns small-12 medium-6">
                <h2><strong>Add Visitor</strong></h2>

                <form role="form">
                    <div class="form-group">
                    <%= text_field :visitor, :first_name, :placeholder => " First Name" %>
                    </div>
                    <div class="form-group">
                    <%= text_field :visitor, :last_name, :placeholder => "Last Name" %>
                    </div>
                    <div class="form-group">
                    <%= email_field :visitor, :email, :placeholder => "Email" %>
                    </div>
                    <div class="form-group">
                    <%= telephone_field :visitor, :phone_number, :placeholder => "Phone-Number" %>
                    </div>
                     <br>
                    <div class="form-group">    
                    <%= f.submit "Submit", class: "tiny button" %>
                    </div>
                </form>
            </div>
        </div>
    </body>

<% end %>
